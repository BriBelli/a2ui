{
  "name": "a2ui-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/a2ui-core/src",
  "projectType": "library",
  "tags": ["scope:a2ui", "type:core"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsup src/index.ts --format cjs,esm --outDir dist",
        "cwd": "libs/a2ui-core"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Dev mode uses source files directly via Vite'",
        "cwd": "libs/a2ui-core"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc --noEmit",
        "cwd": "libs/a2ui-core"
      }
    }
  }
}
